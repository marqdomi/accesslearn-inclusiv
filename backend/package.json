{
  "name": "accesslearn-backend",
  "version": "1.0.0",
  "description": "AccessLearn Backend - Multi-tenant SaaS LMS",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.prod.json",
    "build:strict": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "server": "ts-node-dev --respawn --transpile-only src/server.ts",
    "create-tenant": "ts-node src/scripts/create-tenant.ts",
    "create-user": "ts-node src/scripts/create-user.ts",
    "list-tenants": "ts-node src/scripts/list-tenants.ts",
    "setup-demo": "ts-node src/scripts/setup-demo-data.ts",
    "setup-demo-complete": "ts-node src/scripts/setup-demo-complete.ts",
    "setup-tutorial-courses": "ts-node src/scripts/setup-tutorial-courses.ts",
    "assign-tutorial-courses": "ts-node src/scripts/assign-tutorial-courses-to-user.ts",
    "setup-dra-amayrani": "ts-node src/scripts/setup-dra-amayrani.ts",
    "update-passwords": "ts-node src/scripts/update-passwords.ts",
    "update-ana-role": "ts-node src/scripts/update-ana-role.ts",
    "clean": "ts-node src/scripts/clean-database.ts",
    "seed": "ts-node src/scripts/seed-data.ts",
    "reset-db": "npm run clean && npm run seed",
    "reset-kainet": "ts-node src/scripts/reset-to-kainet-only.ts",
    "create-test-users-all-roles": "ts-node src/scripts/create-test-users-all-roles.ts",
    "grant-super-admin": "ts-node src/scripts/grant-super-admin.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "ts-node src/scripts/test-security.ts",
    "test:jwt": "./scripts/test-jwt-manual.sh",
    "test:rate-limit": "./scripts/test-rate-limiting.sh",
    "test:headers": "./scripts/test-security-headers.sh",
    "test:all-security": "npm run test:jwt && npm run test:rate-limit && npm run test:headers",
    "test:functionality": "ts-node src/scripts/test-functionality.ts",
    "test:profile": "ts-node src/scripts/test-profile.ts",
    "test:all": "npm run test:all-security && npm run test:functionality"
  },
  "keywords": [
    "azure",
    "cosmosdb",
    "multi-tenant",
    "saas"
  ],
  "author": "Marco Dominguez",
  "license": "ISC",
  "dependencies": {
    "@azure/cosmos": "^4.7.0",
    "@azure/functions": "^4.9.0",
    "@azure/storage-blob": "^12.29.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "resend": "^6.5.2",
    "typescript": "^5.9.3",
    "ulid": "^3.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2"
  }
}
