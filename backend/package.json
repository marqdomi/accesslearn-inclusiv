{
  "name": "accesslearn-backend",
  "version": "1.0.0",
  "description": "AccessLearn Backend - Multi-tenant SaaS LMS",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "server": "ts-node-dev --respawn --transpile-only src/server.ts",
    "create-tenant": "ts-node src/scripts/create-tenant.ts",
    "create-user": "ts-node src/scripts/create-user.ts",
    "list-tenants": "ts-node src/scripts/list-tenants.ts",
    "setup-demo": "ts-node src/scripts/setup-demo-data.ts",
    "update-passwords": "ts-node src/scripts/update-passwords.ts",
    "update-ana-role": "ts-node src/scripts/update-ana-role.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "azure",
    "cosmosdb",
    "multi-tenant",
    "saas"
  ],
  "author": "Marco Dominguez",
  "license": "ISC",
  "dependencies": {
    "@azure/cosmos": "^4.7.0",
    "@azure/functions": "^4.9.0",
    "@azure/storage-blob": "^12.29.1",
    "@types/node": "^24.10.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2"
  }
}
