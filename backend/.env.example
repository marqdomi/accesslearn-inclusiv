# Azure Cosmos DB
COSMOS_ENDPOINT=https://accesslearn-cosmos-prod.documents.azure.com:443/
COSMOS_KEY=your-primary-key-here
COSMOS_DATABASE=accesslearn-db

# Azure Storage
STORAGE_CONNECTION_STRING=your-storage-connection-string-here

# Azure
AZURE_SUBSCRIPTION_ID=your-subscription-id-here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# SendGrid Email Service (for invitation and verification emails)
# Sign up at https://sendgrid.com and get your API key
# Configure sender authentication for kainet.mx domain
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Email Configuration
FROM_EMAIL=noreply@kainet.mx
FROM_NAME=AccessLearn Inclusiv

# Frontend URL (for email links)
FRONTEND_URL=https://app.kainet.mx
# For local development: FRONTEND_URL=http://localhost:5173

# Environment
NODE_ENV=development
PORT=3000
